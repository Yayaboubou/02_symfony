{% extends 'base.html.twig' %}

{% block title %}Program index{% endblock %}

{% block body %}
    <h1>Program index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Summary</th>
                <th>Poster</th>
                <th>Episodes</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for program in programs %}
            <tr>
                <td>{{ program.id }}</td>
                <td> <a href="{{ path('program_show', {'slug': program.slug}) }}">{{ program.title }}</a></td>
                <td>{{ program.summary }}</td>
                <td><img class="w-25" src="{{ program.poster }}" alt="poster"></td>
                <td><a href="{{ path('season_index') }}">saisons</a></td>
                <td>
                    <a href="{{ path('program_show', {'slug': program.slug}) }}">Show</a>
                    <a href="{{ path('program_edit', {'slug': program.slug}) }}">Edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('program_new') }}">Create new</a>
{% endblock %}
